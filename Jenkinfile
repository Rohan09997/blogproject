https://github.com/Rohan09997/blogproject

pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Rohan09997/blogproject.git'
            }
        }

        stage('Deploy to Web Server') {
            steps {
                sh '''
                echo "Deploying website..."
                sudo cp -r * /var/www/blog/
                '''
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
